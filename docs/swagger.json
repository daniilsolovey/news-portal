                },
                "publishedAt": {
                    "type": "string"
                },
                "statusId": {
                    "type": "integer"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.Tag"
                    }
                },
                "title": {
                    "type": "string"
                },
                "updatedAt": {
                    "type": "string"
                }
            }
        },
        "domain.NewsSummary": {
            "type": "object",
            "properties": {
                "author": {
                    "type": "string"
                },
                "category": {
